@model List<Category>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Category list</h1>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">New category</a>
        </div>
    </div>
    
    <table class="table table-bordered table-striped-columns">
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display order
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                            Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" class="btn btn-danger">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>