@model List<Category>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Category list</h1>
        </div>
        <div class="col-6">
            <a asp-controller="" asp-action="" class="btn btn-primary">New category</a>
        </div>
    </div>
    
    <table class="table table-bordered table-striped-columns">
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display order
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
        }
        </tbody>
    </table>
</div>