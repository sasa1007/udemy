@model Category

<div>
    <h1>Category New</h1>
</div>

<form method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-bg-danger"></span>
    </div>
    @* All, None *@
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control"/>
        <span asp-validation-for="DisplayOrder" class="text-bg-danger"></span>
    </div>
    <button type="submit">Create</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
</form>

