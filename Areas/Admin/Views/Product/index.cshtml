@model List<Product>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Product list</h1>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">New product</a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped-columns">
        <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Description</th>
            <th>Isbn</th>
            <th>Price</th>
            <th>Price50</th>
            <th>Price100</th>
            <th>ListPrice</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>
@section Scripts
{
    <script src="~/js/product.js"></script>
}
